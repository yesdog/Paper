+++ b/src/main/java/net/minecraft/server/TileEntityChest.java
@@ -305,7 +305,7 @@ public class TileEntityChest extends TileEntityLootable { // Paper - Remove ITic
     // CraftBukkit start
     @Override
     public boolean isFilteredNBT() {
-        return true;
+        return false; // Paper
     }
     // CraftBukkit end
 }
